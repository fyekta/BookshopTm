@model User


<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>ورود</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Vazirmatn', Tahoma, sans-serif;
            background: #f0f2f5;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start; 
            padding-top: 10vh; 
        }

        .login-box {
            background: white;
            padding: 30px 40px;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 380px;
            text-align: center;
            margin: 20px;
        }

        h2 {
            font-size: 1.8rem;
            color: #333;
            margin-bottom: 25px;
            font-weight: 500;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 12px 16px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            text-align: right;
            direction: rtl;
        }

        input:focus {
            outline: none;
            border-color: #4a90e2;
            box-shadow: 0 0 0 2px rgba(74, 144, 226, 0.2);
        }

        button {
            width: 100%;
            padding: 12px;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 500;
            cursor: pointer;
            margin-top: 15px;
            transition: background 0.3s;
        }

            button:hover {
                background: #0056b3;
            }
    </style>
</head>
<body>

    <div class="login-box">
        <h2>‌ورود</h2>
        <form asp-action="Login" method="post" >
            <input asp-for="Username" type="text" placeholder="نام کاربری" required />
            <input asp-for="PasswordHash" type="password" placeholder="رمز عبور" required />
            <button type="submit">ورود</button>
        </form>
    </div>

</body>
</html>