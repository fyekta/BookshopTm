@model List<book>



<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <title>لیست کتاب</title>
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Vazirmatn', Tahoma, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding-top: 8vh;
            padding-left: 15px;
            padding-right: 15px;
        }

        .book-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
            width: 100%;
            max-width: 850px;
            overflow: hidden;
        }

        .title-box {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            padding: 18px 30px;
            text-align: center;
            font-size: 1.9rem;
            font-weight: 600;
            border-radius: 20px 20px 0 0;
            position: relative;
            overflow: hidden;
        }

            .title-box::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(255, 255, 255, 0.1);
                transform: skewX(-15deg);
                z-index: 0;
            }

            .title-box span {
                position: relative;
                z-index: 1;
            }

       
        .table-wrapper {
            padding: 0 45px 35px;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 12px;
            margin-top: 20px;
            font-size: 1rem;
        }

        thead th {
            background: #f8f9fa;
            color: #495057;
            padding: 14px 12px;
            text-align: center;
            font-weight: 600;
            border-bottom: 2px solid #007bff;
        }

        tbody tr {
            background: #ffffff;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

            tbody tr:hover {
                background: #eef5ff;
                transform: translateY(-4px);
                box-shadow: 0 10px 25px rgba(0, 123, 255, 0.18);
            }

        tbody td {
            padding: 16px 12px;
            text-align: center;
            color: #444;
            font-weight: 500;
        }

            tbody td:first-child,
            tbody td:last-child {
                font-weight: 600;
                color: #007bff;
            }

       
    </style>
</head>
<body>

    <div class="book-container">
       
        <div class="title-box">
            <span>لیست کتاب</span>
        </div>

        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>شناسه</th>
                        <th>نام</th>
                        <th>نویسنده</th>
                        <th>تعداد صفحه</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Author</td>
                            <td>@item.pagecount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>